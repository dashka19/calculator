#include <iostream>

using namespace std;

int main()
{
    setlocale(LC_ALL,"Russian");
    int num, a,b,c,d; //разряды числа
    num=1531;
    if(num>1999){
        cout<<"ошибка";
    }
    if(num<1){
    cout<<"ошибка";
    }
    a=1;
    b=5;
    c=3;
    d=1;
    switch(a){
        case 1:{cout<<"тысяча ";      //если а равно 1
        break;
        }
    }
    switch(b){
        case 1:{cout<<"сто ";       //если b равно 1
        break;
        }
        case 2:{cout<<"двесте ";       //если b равно 2
        break;
        }
        case 3:{cout<<"триста ";       //если b равно 3
        break;
        }
        case 4:{cout<<"четыреста ";       //если b равно 4
        break;
        }
        case 5:{cout<<"пятьсот ";       //если b равно 5
        break;
        }
        case 6:{cout<<"шестьсот ";       //если b равно 6
        break;
        }
        case 7:{cout<<"семьсот ";       //если b равно 7
        break;
        }
        case 8:{cout<<"восемьсот ";       //если b равно 8
        break;
        }
        case 9:{cout<<"девятьсот ";       //если b равно 9
        break;
        }
    }
    if(c*10+d>=11 && c*10+d <=19){      //проверяем промежуток от 11 до 19
        switch(c*10+d){                  //начало проверки
        case 11:{                       //если деятки равны 11
        cout<<"одинадцать котиков";
        break;
        }
        case 12:{                   //если деятки равны 12
        cout<<"двенадцать котиков";
        break;
        }
        case 13:{                   //если деятки равны 13
        cout<<"тринадцать котиков";
        break;
        }
        case 14:{                   //если деятки равны 14
        cout<<"четырнадцать котиков";
        break;
        }
        case 15:{           //если деятки равны 15
        cout<<"пятнадцать котиков";
        break;
        }
        case 16:{           //если деятки равны 16
        cout<<"шестныдцать котиков";
        break;
        }
        case 17:{       //если деятки равны 17
        cout<<"семнадцть котиков";
        break;
        }
        case 18:{               //если деятки равны 18
        cout<<"восемнадцать котиков";
        break;
        }
        case 19:{               //если деятки равны 19
        cout<<"девятнадцать котиков";
        break;}
        }
        }
    else{
        switch(c){
             case 1:{cout<<"десять ";       //если c равно 10
        break;
        }
        case 2:{cout<<"двадцать ";       //если c равно 20
        break;
        }
        case 3:{cout<<"тридцать ";       //если c равно 30
        break;
        }
        case 4:{cout<<"сорок ";       //если c равно 40
        break;
        }
        case 5:{cout<<"пятьдесят ";       //если c равно 50
        break;
        }
        case 6:{cout<<"шестьдесят ";       //если c равно 60
        break;
        }
        case 7:{cout<<"семьдесят ";       //если c равно 70
        break;
        }
        case 8:{cout<<"восемьдесят ";       //если c равно 80
        break;
        }
        case 9:{cout<<"девяносто ";       //если c равно 90
        break;
        }
        }
    }
    switch(d){
        case 1:{cout<<"один котик";       //если d равно 1
        break;
        }
        case 2:{cout<<"два котика";       //если d равно 2
        break;
        }
        case 3:{cout<<"три котика";       //если d равно 3
        break;
        }
        case 4:{cout<<"четыре котика";       //если d равно 4
        break;
        }
        case 5:{cout<<"пять котиков";       //если d равно 5
        break;
        }
        case 6:{cout<<"шесть котиков";       //если d равно 6
        break;
        }
        case 7:{cout<<"семь котиков";       //если d равно 7
        break;
        }
        case 8:{cout<<"восемь котиков ";       //если d равно 8
        break;
        }
        case 9:{cout<<"девять котиков";       //если d равно 9
        break;
        }
    }
    return 0;
}
